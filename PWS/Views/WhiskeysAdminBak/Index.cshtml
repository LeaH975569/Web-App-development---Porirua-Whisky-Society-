@model IEnumerable<PWS.Models.Whiskey>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WhiskeyImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskeyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskeyDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskeyFinish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskeyAroma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskeyTaste)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="@item.WhiskeyImageUrl" width="100" height="70" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhiskeyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhiskeyDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhiskeyFinish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhiskeyAroma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhiskeyTaste)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WhiskeyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WhiskeyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WhiskeyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
