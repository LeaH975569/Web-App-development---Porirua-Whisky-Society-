@model PWS.Models.Whiskey

@{
    ViewData["Title"] = "Details";
}
<br />
<h4>Viewing Whiskey Details</h4>
<hr />
<div>
    <div class="col-md-5">
        <h5><i>@Model.WhiskeyName's</i> Details</h5>
        <hr />
        <div class="my-2 mb-4 p-2 pt-1">
            <div class="form-group mb-2">
                <label asp-for="WhiskeyName" class="control-label"></label>:
                <span asp-for="WhiskeyName">@Model.WhiskeyName </span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="WhiskeyImageUrl" class="control-label"></label>: <br />
                <img src="@Model.WhiskeyImageUrl" style="height:125px;" /><br />
                <span asp-for="WhiskeyImageUrl" class="fst-italic">@Model.WhiskeyImageUrl</span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="WhiskeyDescription" class="control-label"></label>: <br />
                <p>@Model.WhiskeyDescription</p>
            </div>
        </div>

        <h5>Tasting & Score Details</h5>
        <hr />
        <div class="my-2 mb-4 p-2 pt-1">
            <div class="form-group mb-2">
                <label asp-for="WhiskeyScoreSetting" class="control-label"></label>:
                <span>@Model.WhiskeyScoreSetting.ToString()</span>
            </div>
            @if (Model.WhiskeyScoreSetting != WhiskeyScoreSetting.NotScored)
            {
                @if (Model.WhiskeyScoreSetting == WhiskeyScoreSetting.ManualSub)
                {
                    <div class="form-group mb-2">
                        <label asp-for="WhiskeyFinish" class="control-label"></label>:
                        <span class="">@Model.WhiskeyFinish</span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="WhiskeyAroma" class="control-label"></label>:
                        <span class="">@Model.WhiskeyAroma</span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="WhiskeyTaste" class="control-label"></label>:
                        <span class="">@Model.WhiskeyTaste</span>
                    </div>
                }
                <div class="form-group mb-2">
                    <label asp-for="TotalScore" class="control-label"></label>:
                    <span class="">@Model.TotalScore</span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="TastedDate" class="control-label"></label>:
                    <span class="">@(Model.TastedDate != null ? Model.TastedDate.Value.ToString() : "")</span>
                </div>
            }
        </div>
    </div>
    <a asp-action="Edit" asp-route-id="@Model?.WhiskeyId" class="btn btn-info">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

<style>
    .form-group label{
        font-weight:bold;
    }
</style>
