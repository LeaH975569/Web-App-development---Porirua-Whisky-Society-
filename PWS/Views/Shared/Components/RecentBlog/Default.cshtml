@model Blog
<a asp-controller="Blog" asp-action="BlogEntry" asp-route-id="@Model.Id" style="color: inherit; text-decoration:inherit">
    <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">Our latest Blog post</h2>
                <h2 class="text-muted">@Model.Title</h2>
                <p class="lead">@Model.Summary @(Model.Summary.Count() > Blog.SummaryCharacterCount - 10 ? ". . ." : "")</p>
            </div>
            <div class="col-md-5">
                <div class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" style="background:url('@Model.ImageUrl') center no-repeat; background-size: auto 100%; width:500px; height:400px"></div>
                @* <svg class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto"  width="500" height="500" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 500x500" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#eee"></rect><text x="50%" y="50%" fill="#aaa" dy=".3em">500x500</text></svg> *@
            </div>
    </div>
</a>